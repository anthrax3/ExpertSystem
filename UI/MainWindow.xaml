<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="599" Width="800" Background="Black" MinWidth="800" MinHeight="600">
    <Grid Background="#FF303030">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="213"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="26"/>
        </Grid.RowDefinitions>
        <StatusBar Background="#FF171717" Foreground="White" Height="25" VerticalAlignment="Bottom" Grid.Row="1" Grid.ColumnSpan="3">
            <StatusBarItem Content="Ready"/>
        </StatusBar>
        <Grid Background="#FF404040" Margin="0,0,0,157" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="43*"/>
            </Grid.RowDefinitions>
            <RichTextBox x:Name="SourceCodeBox" Background="#FF1F1E1E" BorderBrush="{x:Null}" 
				Foreground="White" FontSize="1" FontFamily="Consolas" BorderThickness="0" Grid.Row="1" 
                VerticalScrollBarVisibility="Auto" KeyDown="richTextBox_KeyDown" AcceptsTab="True" >
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
                <FlowDocument>
                    <Paragraph>
                        <Run Text="Приятели" Foreground="#FFA0A0DA" FontSize="14" />
                        <Run Text="(" Foreground="#FFCBC4C4" FontSize="14" />
                        <Run Text="X, Y" FontSize="14" />
                        <Run Text=")" Foreground="#FFCBC4C4" FontSize="14" />
                        <Run Text=" : " Foreground="#FFCBC4C4" FontSize="14" />
                        <Run Text="Знакомы" Foreground="#FFA0A0DA" FontSize="14" />
                        <Run Text="(" Foreground="#FFCBC4C4" FontSize="14" />
                        <Run Text="X, Y" FontSize="14" />
                        <Run Text=")" Foreground="#FFCBC4C4" FontSize="14" />
                        <Run Text=" И " FontSize="14" />
                        <Run Text="Собеседники" Foreground="#FFA0A0DA" FontSize="14" />
                        <Run Text="(" Foreground="#FFCBC4C4" FontSize="14" />
                        <Run Text="X, Y" FontSize="14" />
                        <Run Text=")" Foreground="#FFCBC4C4" FontSize="14" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Label x:Name="SourceCodeHeader" Content="lorem.log" Foreground="White"/>
        </Grid>
        <Grid Background="#FF404040" Height="157" VerticalAlignment="Bottom" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="43*"/>
            </Grid.RowDefinitions>
            <RichTextBox x:Name="OutputBox" Background="#FF1F1E1E" BorderBrush="{x:Null}" 
				Foreground="White" FontSize="13.333" BorderThickness="0" Grid.Row="1" 
                VerticalScrollBarVisibility="Auto" IsReadOnly="True" IsReadOnlyCaretVisible="True" >
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
                <FlowDocument>
                    <Paragraph>
                        <Run Text="Это окно вывода."/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="Результаты исполнения программы будут отображаться здесь."/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Label x:Name="OutputHeader" Content="Вывод" Foreground="White"/>
        </Grid>
        <Grid Background="#FF404040" Height="157" VerticalAlignment="Bottom" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="43*"/>
            </Grid.RowDefinitions>
            <RichTextBox x:Name="OutputBox1" Background="#FF1F1E1E" BorderBrush="{x:Null}" 
        		Foreground="White" FontSize="13.333" BorderThickness="0" Grid.Row="1" 
        		VerticalScrollBarVisibility="Auto" IsReadOnly="True" IsReadOnlyCaretVisible="True" Margin="0,0,0,26" >
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
                <FlowDocument>
                    <Paragraph>
                        <Run Text="Во время выполнения программы тут можно вводить команды для моментального исполнения."/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Label x:Name="OutputHeader1" Content="Интерпретатор" Foreground="White" BorderThickness="1,0,0,0" BorderBrush="#FF3A3A3A"/>
            <TextBox x:Name="textBox" Height="26" Margin="16,104,0,0" Grid.Row="1" TextWrapping="Wrap" FontSize="14" VerticalContentAlignment="Center" Background="#FF0F0F0F" BorderThickness="0" Foreground="White" VerticalAlignment="Top" FontFamily="Consolas" Text="Приятели(Саша, Женя)?"/>
            <Border HorizontalAlignment="Left" Grid.Row="1" Width="16" Height="26" VerticalAlignment="Bottom" Background="#FF0F0F0F">
                <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="&gt;" FontSize="13.333" Foreground="White" Margin="0,4,0,0" HorizontalAlignment="Right" Width="12"/>
            </Border>
        </Grid>
    </Grid>
</Window>
